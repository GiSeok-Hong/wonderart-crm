// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model Student {
  id Int @id @default(autoincrement())
  entranceDate String @db.VarChar(10)
  class StudentOnClass[]
  name String @db.VarChar(5)
  phone String @db.VarChar(13)
  birthDate String @db.VarChar(10)
  sex String @db.VarChar(1)
  guardian Guardian @relation(fields: [guardianId], references: [id])
  guardianId Int
  address String @db.VarChar(100)
  school String @db.VarChar(20)
  experience String @db.VarChar(100)
  reason String @db.VarChar(5)
  importantActivity String @db.VarChar(10)
  interestingActivity String @db.VarChar(10)
  caution String @db.VarChar(200)
  agree Boolean
  teacherMemo String @db.VarChar(200)
}

model Guardian {
  id Int @id @default(autoincrement())
  name String @db.VarChar(5)
  phone String @db.VarChar(13)
  student Student[]
}

model Teacher {
  id Int @id @default(autoincrement())
  name String @db.VarChar(5)
  phone String @db.VarChar(13)
  loginId String @unique @db.VarChar(20)
  password String @db.VarChar(20)
}

model ScheduleMemo {
  id Int @id @default(autoincrement())
  topMemo String @db.VarChar(1000)
  memo1 String @db.VarChar(1000)
  memo2 String @db.VarChar(1000)
  memo3 String @db.VarChar(1000)
  memo4 String @db.VarChar(1000)
  memo5 String @db.VarChar(1000)
}

model Class {
  id Int @id @default(autoincrement())
  day String @db.VarChar(1)
  time Int
  student StudentOnClass[]
}

model StudentOnClass {
  student Student @relation(fields: [studentId], references: [id])
  studentId Int
  class Class @relation(fields: [classId], references: [id])
  classId Int

  @@id([studentId, classId])
}